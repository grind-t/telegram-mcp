// https://nodejs.org/api/typescript.html#type-stripping
{
	"compilerOptions": {
		"noEmit": true,
		"target": "esnext",
		"module": "nodenext",
		"allowImportingTsExtensions": true,
		"erasableSyntaxOnly": true,
		"verbatimModuleSyntax": true,
		"strict": true
	},
	"include": ["lib/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
